<section id="stats" class="relative py-20 bg-gradient-to-r from-blue-50 via-white to-blue-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
  <div class="max-w-6xl mx-auto px-6 text-center relative z-10">
    <h2 class="text-4xl font-extrabold mb-6 text-gray-800 dark:text-white">
      Nuestro respaldo en números
    </h2>
    <p class="text-lg text-gray-600 dark:text-gray-300 mb-16 max-w-3xl mx-auto">
      Las cifras reflejan la <span class="text-blue-600 dark:text-blue-400 font-semibold">confianza</span> de nuestros clientes
      y el compromiso de RLH con la <span class="text-blue-600 dark:text-blue-400 font-semibold">excelencia</span> en la gestión contable y tributaria.
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">

      <div class="stat-item opacity-0 translate-y-6 transition-all duration-700 ease-out
                  bg-white/70 dark:bg-gray-800/70 backdrop-blur-md rounded-2xl shadow-md
                  hover:shadow-xl hover:scale-105 transform p-8">
        <span class="text-5xl font-extrabold text-blue-600 dark:text-blue-400 counter" data-target="20">0</span>
        <span class="text-5xl font-extrabold text-blue-600 dark:text-blue-400">+</span>
        <p class="mt-3 text-gray-700 dark:text-gray-300">Años de experiencia</p>
      </div>

      <div class="stat-item opacity-0 translate-y-6 transition-all duration-700 ease-out
                  bg-white/70 dark:bg-gray-800/70 backdrop-blur-md rounded-2xl shadow-md
                  hover:shadow-xl hover:scale-105 transform p-8">
        <span class="text-5xl font-extrabold text-blue-600 dark:text-blue-400 counter" data-target="100">0</span>
        <span class="text-5xl font-extrabold text-blue-600 dark:text-blue-400">+</span>
        <p class="mt-3 text-gray-700 dark:text-gray-300">Empresas asesoradas</p>
      </div>

      <div class="stat-item opacity-0 translate-y-6 transition-all duration-700 ease-out
                  bg-white/70 dark:bg-gray-800/70 backdrop-blur-md rounded-2xl shadow-md
                  hover:shadow-xl hover:scale-105 transform p-8">
        <span class="text-5xl font-extrabold text-blue-600 dark:text-blue-400 counter" data-target="98">0</span>
        <span class="text-3xl font-extrabold text-blue-600 dark:text-blue-400">%</span>
        <p class="mt-3 text-gray-700 dark:text-gray-300">Satisfacción de clientes</p>
      </div>

      <div class="stat-item opacity-0 translate-y-6 transition-all duration-700 ease-out
                  bg-white/70 dark:bg-gray-800/70 backdrop-blur-md rounded-2xl shadow-md
                  hover:shadow-xl hover:scale-105 transform p-8">
        <span class="text-5xl font-extrabold text-blue-600 dark:text-blue-400 counter" data-target="100">0</span>
        <span class="text-3xl font-extrabold text-blue-600 dark:text-blue-400">%</span>
        <p class="mt-3 text-gray-700 dark:text-gray-300">Cumplimiento normativo</p>
      </div>

    </div>
  </div>

  <div class="absolute inset-0 bg-gradient-radial from-blue-200/20 via-transparent to-transparent dark:from-indigo-400/10"></div>
</section>

<script is:inline>
  function initStats() {
    const counters = document.querySelectorAll('.counter');
    const statItems = document.querySelectorAll('.stat-item');
    const speed = 100;

    function animateCounters() {
      counters.forEach(counter => {
        const target = +counter.dataset.target;
        let count = 0;
        const step = () => {
          count += Math.ceil(target / speed);
          counter.textContent = count < target ? count : target;
          if (count < target) requestAnimationFrame(step);
        };
        requestAnimationFrame(step);
      });
    }

    const observer = new IntersectionObserver((entries, obs) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          statItems.forEach((item, i) =>
            setTimeout(() => item.classList.replace('opacity-0','opacity-100'), i * 200)
          );
          animateCounters();
          obs.disconnect();
        }
      });
    }, { threshold: 0.2 });

    observer.observe(document.getElementById('stats'));
  }

  document.addEventListener('astro:after-swap', initStats);
  initStats();
</script>
