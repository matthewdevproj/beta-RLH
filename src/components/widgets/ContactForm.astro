---
import Form from '~/components/ui/Form.astro';

const inputs = [
  { name: 'name', label: 'Nombre completo', type: 'text', placeholder: 'Ingresa tu nombre completo' },
  { name: 'email', label: 'Correo electrónico', type: 'email', placeholder: 'tu@email.com' },
  { name: 'phone', label: 'Teléfono', type: 'tel', placeholder: '+1 (555) 123-4567' },
  { name: 'service', label: 'Servicio de interés', type: 'select', placeholder: 'Selecciona un servicio', options: [
    { value: 'auditoria-tributaria', label: 'Asesoría y Auditoría Tributaria' },
    { value: 'servicios-contables', label: 'Servicios Contables y de Planillas' },
    { value: 'asesoria-legal', label: 'Asesoría Legal Empresarial' },
    { value: 'auditoria-financiera', label: 'Auditoría Financiera' },
    { value: 'consultoria-niif', label: 'Consultoría en NIIF' },
    { value: 'capacitaciones', label: 'Capacitaciones In-House' },
    { value: 'otros', label: 'Otros Servicios Especializados' }
  ]}
];

const textarea = {
  name: 'message',
  label: 'Mensaje',
  placeholder: 'Describe tus necesidades específicas y cómo podemos ayudarte...',
  rows: 4,
};

const disclaimer = {
  label: 'He leído y acepto la política de privacidad.',
};
---

<section
  id="contact"
  class="contact-section pt-16 pb-16 scroll-mt-20 relative bg-cover bg-center bg-no-repeat"
  style="background-image: url('https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80');"
>
  <!-- Overlay profesional azul -->
  <div class="absolute inset-0 bg-blue-900/80"></div>

  <div class="container mx-auto max-w-6xl px-4 relative z-10">
    <!-- Header mejorado -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white font-serif">Contáctenos</h2>
      <div class="w-20 h-1 bg-green-400 mx-auto mb-4"></div>
      <p class="text-lg text-blue-100 max-w-2xl mx-auto">
        Expertos en soluciones contables, fiscales y financieras para tu negocio
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
      <!-- Servicios Especializados -->
      <div class="text-white">
        <h3 class="text-2xl font-bold mb-6 text-green-400">Nuestros Servicios Especializados</h3>
        
        <div class="space-y-4">
          <!-- Asesoría y Auditoría Tributaria -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border-l-4 border-green-400 hover:bg-white/15 transition-all duration-300">
            <h4 class="font-semibold text-lg mb-2 text-white">Asesoría y Auditoría Tributaria</h4>
            <p class="text-blue-100 text-sm leading-relaxed">
              Prevención de contingencias tributarias y optimización de recursos mediante planes personalizados de planificación fiscal.
            </p>
          </div>

          <!-- Servicios Contables y de Planillas -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border-l-4 border-green-400 hover:bg-white/15 transition-all duration-300">
            <h4 class="font-semibold text-lg mb-2 text-white">Servicios Contables y de Planillas</h4>
            <p class="text-blue-100 text-sm leading-relaxed">
              Gestión contable y de planillas en modalidad InHouse u Outsourcing, con respaldo especializado y total confidencialidad.
            </p>
          </div>

          <!-- Asesoría Legal Empresarial -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border-l-4 border-green-400 hover:bg-white/15 transition-all duration-300">
            <h4 class="font-semibold text-lg mb-2 text-white">Asesoría Legal Empresarial</h4>
            <p class="text-blue-100 text-sm leading-relaxed">
              Acompañamiento en constitución, fusiones, escisiones y liquidaciones de empresas, junto con consultoría jurídica especializada.
            </p>
          </div>

          <!-- Auditoría Financiera -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border-l-4 border-green-400 hover:bg-white/15 transition-all duration-300">
            <h4 class="font-semibold text-lg mb-2 text-white">Auditoría Financiera</h4>
            <p class="text-blue-100 text-sm leading-relaxed">
              Evaluación integral de estados financieros para garantizar transparencia y cumplimiento normativo en todas las operaciones.
            </p>
          </div>

          <!-- Consultoría en NIIF -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border-l-4 border-green-400 hover:bg-white/15 transition-all duration-300">
            <h4 class="font-semibold text-lg mb-2 text-white">Consultoría en NIIF</h4>
            <p class="text-blue-100 text-sm leading-relaxed">
              Implementación y aplicación adecuada de las Normas Internacionales de Información Financiera.
            </p>
          </div>

          <!-- Capacitaciones In-House -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border-l-4 border-green-400 hover:bg-white/15 transition-all duration-300">
            <h4 class="font-semibold text-lg mb-2 text-white">Capacitaciones In-House</h4>
            <p class="text-blue-100 text-sm leading-relaxed">
              Programas de formación a medida, dictados por especialistas del sector directamente en la organización.
            </p>
          </div>

          <!-- Otros Servicios Especializados -->
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border-l-4 border-green-400 hover:bg-white/15 transition-all duration-300">
            <h4 class="font-semibold text-lg mb-2 text-white">Otros Servicios Especializados</h4>
            <p class="text-blue-100 text-sm leading-relaxed">
              Soluciones personalizadas adaptadas a las necesidades específicas de tu empresa.
            </p>
          </div>
        </div>

        <!-- Información de contacto rápida -->
        <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div class="flex items-center text-blue-100">
            <svg class="w-5 h-5 text-green-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm">Respuesta en 24h</span>
          </div>
          <div class="flex items-center text-blue-100">
            <svg class="w-5 h-5 text-green-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span class="text-sm">Especialistas certificados</span>
          </div>
        </div>
      </div>

      <!-- Formulario -->
      <div
        class="bg-white rounded-xl shadow-2xl border border-gray-100 p-6 sm:p-8 lg:p-10 transform hover:shadow-2xl transition-all duration-300 sticky top-8"
      >
        <div class="mb-6">
          <h3 class="text-2xl font-bold text-gray-800 mb-2">Solicite una consulta especializada</h3>
          <p class="text-gray-600">Complete el formulario y nuestro equipo de expertos se pondrá en contacto con usted</p>
        </div>

        <Form 
          inputs={inputs} 
          textarea={textarea} 
          disclaimer={disclaimer} 
          button="Solicitar consulta" 
          description="" 
        />
      </div>
    </div>

    <!-- Información de contacto adicional -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-12 text-center">
      <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20 hover:bg-white/15 transition-all duration-300">
        <div class="w-12 h-12 bg-blue-300 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
        </div>
        <h4 class="text-white font-semibold mb-1">Teléfono</h4>
        <p class="text-blue-100 text-sm">+51 933 167 550</p>
      </div>

      <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20 hover:bg-white/15 transition-all duration-300">
        <div class="w-12 h-12 bg-blue-300 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
          </svg>
        </div>
        <h4 class="text-white font-semibold mb-1">Email</h4>
        <p class="text-blue-100 text-sm">consultas@rhlcontadores.com</p>
      </div>

      <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4 border border-white/20 hover:bg-white/15 transition-all duration-300">
        <div class="w-12 h-12 bg-blue-300 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
        </div>
        <h4 class="text-white font-semibold mb-1">Horario de atención</h4>
        <p class="text-blue-100 text-sm">Lun-Vie: 8:00-18:00</p>
        <p class="text-blue-100 text-sm">Sábados: 8:00-13:00</p>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    position: relative;
  }
  
  .contact-section::before,
  .contact-section::after {
    content: '';
    position: absolute;
    left: 0;
    width: 100%;
    height: 100px;
    z-index: 1;
    pointer-events: none;
  }
  
  .contact-section::before {
    top: 0;
    background: linear-gradient(to bottom, rgba(30, 64, 175, 0.9), rgba(30, 64, 175, 0));
  }
  
  .contact-section::after {
    bottom: 0;
    background: linear-gradient(to top, rgba(30, 64, 175, 0.9), rgba(30, 64, 175, 0));
  }

  /* Animación suave para las tarjetas de servicio */
  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .contact-section .bg-white\\/10 {
    animation: fadeInLeft 0.6s ease-out;
  }

  /* Sticky para el formulario en desktop */
  @media (min-width: 1024px) {
    .sticky {
      position: sticky;
    }
  }
</style>