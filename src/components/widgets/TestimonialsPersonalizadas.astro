---
import Headline from '~/components/ui/Headline.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Testimonials as Props } from '~/types';

const {
  title = '',
  subtitle = '',
  tagline = '',
  testimonials = [],
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-6xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <Headline title={title} subtitle={subtitle} tagline={tagline} />

  <div id="testimonials-container" class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 items-stretch">
    {testimonials &&
      testimonials.map(({ testimonial, name, job, rating = 5 }, index) => {
        const stars = Array.from({ length: 5 }, (_, i) => i + 1);
        
        return (
          <div 
            class="testimonial-card flex flex-col h-full intersect-once motion-safe:md:intersect:animate-fade motion-safe:md:opacity-0 intersect-quarter transition-all duration-500 ease-out"
            style={`transition-delay: ${index * 150}ms`}
          >
            <div class="flex flex-col flex-1 p-6 md:p-8 rounded-xl shadow-lg hover:shadow-xl dark:shadow-none 
                        bg-white dark:bg-slate-800 border border-slate-100 dark:border-slate-700
                        transform hover:-translate-y-2 hover:scale-[1.02] transition-all duration-300
                        group hover:border-blue-200 dark:hover:border-blue-600 h-full">
              
              <!-- Icono de comillas decorativo -->
              <div class="mb-4">
                <svg class="w-8 h-8 text-blue-500/20 group-hover:text-blue-500/30 transition-colors duration-300" 
                     fill="currentColor" viewBox="0 0 24 24">
                  <path d="M4.583 17.321C3.553 16.227 3 15 3 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179zm10 0C13.553 16.227 13 15 13 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179z"/>
                </svg>
              </div>

              <!-- Sistema de calificación con estrellas -->
              <div class="mb-4 flex items-center">
                <div class="flex space-x-1">
                  {stars.map((star) => (
                    <svg 
                      key={star}
                      class={`w-5 h-5 star ${star <= rating ? 'text-yellow-400 fill-current' : 'text-gray-300 dark:text-gray-600'}`}
                      fill="currentColor" 
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
                <span class="ml-2 text-sm text-slate-600 dark:text-slate-400 font-medium">
                  {rating}.0/5.0
                </span>
              </div>

              <!-- Testimonio - Altura fija para alineación -->
              {testimonial && (
                <blockquote class="flex-1 mb-6 min-h-[120px]">
                  <p class="text-slate-700 dark:text-slate-300 text-lg leading-relaxed font-medium line-clamp-5">"{testimonial}"</p>
                </blockquote>
              )}

              <!-- Separador elegante -->
              <div class="flex items-center mb-4">
                <div class="flex-1 h-px bg-gradient-to-r from-blue-500/20 to-transparent"></div>
                <div class="mx-4">
                  <!-- Espacio vacío para separador limpio -->
                </div>
                <div class="flex-1 h-px bg-gradient-to-l from-blue-500/20 to-transparent"></div>
              </div>

              <!-- Información del cliente -->
              <div class="flex items-center">
                <!-- Avatar con iniciales -->
                <div class="h-12 w-12 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 
                            flex items-center justify-center shadow-md group-hover:shadow-lg transition-shadow duration-300 flex-shrink-0">
                  <span class="text-white font-semibold text-sm">
                    {name ? name.charAt(0).toUpperCase() : 'C'}
                  </span>
                </div>

                <div class="grow ml-4 min-w-0">
                  {name && (
                    <p class="text-base font-semibold text-slate-800 dark:text-white group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors duration-300 truncate">
                      {name}
                    </p>
                  )}
                  {job && (
                    <p class="text-sm text-slate-600 dark:text-slate-400 mt-1 truncate">
                      {job}
                    </p>
                  )}
                </div>
              </div>

              <!-- Indicador de empresa -->
              <div class="mt-3 pt-3 border-t border-slate-100 dark:border-slate-700">
                <div class="flex items-center text-xs text-slate-500 dark:text-slate-400">
                  <svg class="w-3 h-3 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                  <span class="truncate">Cliente Verificado</span>
                </div>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</WidgetWrapper>

<style is:global>
  .testimonial-card {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .testimonial-card.intersect-once.intersect-quarter {
    opacity: 1;
    transform: translateY(0);
  }

  /* Efecto de brillo al hover */
  .testimonial-card .group {
    position: relative;
    overflow: hidden;
  }

  .testimonial-card:hover .group::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(59, 130, 246, 0.05), transparent);
    transition: left 0.5s ease;
  }

  .testimonial-card:hover .group::before {
    left: 100%;
  }

  /* Animación suave para las estrellas */
  .testimonial-card .star {
    transition: transform 0.2s ease;
  }

  .testimonial-card:hover .star {
    transform: scale(1.1);
  }

  /* Mejoras de alineación */
  .line-clamp-5 {
    display: -webkit-box;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Asegurar que todos los cards tengan la misma altura */
  #testimonials-container {
    align-items: stretch;
  }

  /* Mejoras de accesibilidad */
  .testimonial-card:focus-within {
    outline: 2px solid #3b82f6;
    outline-offset: 2px;
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const testimonialCards = document.querySelectorAll('.testimonial-card');
    
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const delay = parseInt(entry.target.style.transitionDelay) || 0;
            
            setTimeout(() => {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            }, delay);
            
            observer.unobserve(entry.target);
          }
        });
      },
      { 
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      }
    );

    testimonialCards.forEach(card => {
      card.style.opacity = '0';
      card.style.transform = 'translateY(20px)';
      observer.observe(card);
    });

    // Asegurar que todos los testimonios tengan la misma altura
    function equalizeHeights() {
      const containers = document.querySelectorAll('#testimonials-container > .testimonial-card > div');
      let maxHeight = 0;
      
      containers.forEach(container => {
        container.style.height = 'auto';
        const height = container.offsetHeight;
        if (height > maxHeight) maxHeight = height;
      });
      
      containers.forEach(container => {
        container.style.height = maxHeight + 'px';
      });
    }

    // Ejecutar después de que las animaciones terminen
    setTimeout(equalizeHeights, 1000);
    window.addEventListener('resize', equalizeHeights);
  });
</script>