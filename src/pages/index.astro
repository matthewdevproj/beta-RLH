---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import BrandsPersonalizadas from '~/components/widgets/BrandsPersonalizadas.astro';
import TestimonialsPersonalizadas from '~/components/widgets/TestimonialsPersonalizadas.astro';
import Statspersonalizadas from '~/components/widgets/Statspersonalizadas.astro';
import NotePersonalizada from '~/components/widgets/NotePersonalizada.astro';



const metadata = {
  title: 'Consultora Demo',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero>
    <Fragment slot="title">
      CONOCE NUESTROS <span class="hidden xl:inline">SERVICIOS DE GESTIÓN</span>
      <span class="text-accent dark:text-white"> CONTABLE</span> Y 
      <span class="text-accent dark:text-white">TRIBUTARIA</span> 
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">En RLH</span> contamos con mas de 20 años de experiencia en prevención, somos expertos en ofrecer
      soluciones que previenen riesgos y optimizan procesos.
      </span>
    </Fragment>
  </Hero>


  <!-- Nota Widget ******* -->

  <NotePersonalizada title="RLH" description="Cuenta con un equipo multidisciplinario de especialistas en contabilidad, auditoría y asesoría legal, enfocados en ofrecer soluciones que generan confianza y eficiencia." />
  
