---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';


const metadata = {
  title: 'Consultora Demo',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get template',
        href: 'https://github.com/arthelokyo/astrowind',
        target: '_blank',
        icon: 'tabler:download',
      },
      { text: 'Learn more', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'main-image' }}
  >
    <Fragment slot="title">
      CONOCE NUESTROS <span class="hidden xl:inline">SERVICIOS DE GESTIÓN</span>
      <span class="text-accent dark:text-white"> CONTABLE</span> Y <span class="text-accent dark:text-white">TRIBUTARIA</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">"N.Empresa."</span> Con 20 años de experiencia en prevención, somos expertos en ofrecer soluciones que previenen riesgos y optimizan procesos. Entérate lo que podemos ofrecerte.</span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">AstroWind: Production-ready.</span>
      Auditoría Tributaria, Servicios Contables y de Planillas, Asesoria Legal, Auditoria Financiera, Consultoría en NIIF Y Capacitaciones.
    </Fragment>
  </Hero>


  <!-- Nota Widget ******* -->

  <Note title="RLH" description="Cuenta con un equipo multidisciplinario de especialistas en contabilidad, auditoría y asesoría legal, enfocados en ofrecer soluciones que generan confianza y eficiencia." />
  
  <!-- Servicios Widget ************** -->

  <Features2
    title="CONOCE NUESTROS SERVICIOS DE GESTIÓN CONTABLE Y TRIBUTARIA"
    subtitle="Nos avalan expertos que te apoyaran en prevenir riesgos y hacer más eficientes tus procesos. Conoce todo lo que podemos hacer para ti"
    columns={3}
    items={[
      {
        title: 'Asesoría y Auditoría Tributaria',
        description:
          'Prevención de contingencias tributarias y optimización de recursos mediante planes personalizados de planificación fiscal.',
        icon: 'tabler:school',
      },
      {
        title: 'Servicios Contables y de Planillas',
        description:
          'Gestión contable y de planillas en modalidad InHouse u Outsourcing, con respaldo especializado y total confidencialidad.',
        icon: 'tabler:home-star',
      },
      {
        title: 'Asesoría Legal',
        description:
          'Acompañamiento en constitución, fusiones, escisiones y liquidaciones de empresas, junto con consultoría jurídica para optimizar recursos y prevenir riesgos legales.',      
        icon: 'tabler:photo',
      },
      {
        title: 'Auditoría Financiera',
        description:
          'Cobertura en todo el ciclo empresarial, incluyendo constitución, fusiones, escisiones y liquidaciones, más consultoría jurídica para resolver contingencias legales.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'Consultoría en NIIF',
        description:
          'Implementación y aplicación adecuada de las NIIF, con un equipo experto en contabilidad, tributación y derecho financiero.',
        icon: 'tabler:article',
      },
      {
        title: 'Capacitaciones In-House',
        description:
          'Programas de formación a medida, dictados por especialistas del sector directamente en la organización.',
        icon: 'tabler:building-store',
      },
      {
        title: 'Otros Servicios',
        description:
          'Plataforma para facturación y libros electrónicos alineada con SUNAT, revisión de datos para evitar observaciones y soporte en estudios de precios de transferencia.',
        icon: 'tabler:arrow-big-up-lines',
      },  
    ]}
  />

  <!-- Boletines Widget ******* -->

  <BlogLatestPosts
    title="Novedades normativas"
    information={`Conoce las disposiciones, actualizaciones y cambios normativos más relevantes. Este boletín brinda información clara y oportuna para facilitar el cumplimiento de las obligaciones legales y respaldar una adecuada toma de decisiones en materia tributaria y laboral.
                `}
  />

  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="Ponte en comunicación con nosotros" />

  <!-- Contactanos Widget ******************* -->

  <ContactUs
  id="form"
  title="Envíanos un mensaje hoy mismo."
  subtitle='Para respuestas más rápidas, te invitamos a revisar nuestra sección de <a href="#FAQS"><strong>Preguntas Frecuentes (FAQ)</strong></a>, donde quizá encuentres lo que buscas. Si no es así, nuestro equipo de soporte estará encantado de ayudarte.'
  inputs={[
    {
      type: 'text',
      name: 'name',
      label: 'Nombres: ',
    },
    {
      type: 'email',
      name: 'email',
      label: 'Correo: ',
    },
  ]}
  textarea={{
    label: 'Descripción: ',
  }}
  disclaimer={{
    label:
      'Al enviar este formulario de contacto, usted declara recibir información según la descripción brindada.',
  }}
  description="Nuestro equipo de soporte responde habitualmente en un plazo no mayor a 24 horas hábiles."
/>


  <!-- FAQs Widget ******************* -->
  
  <Features
    id="FAQS"
    tagline="FAQs"
    title="Preguntas Frecuentes"
    subtitle="Explora las siguientes preguntas para descubrir las potentes funcionalidades que ofrece AstroWind y cómo pueden impulsar tu experiencia en el desarrollo web."
    items={[
      {
        title: 'Astro + Tailwind CSS Integration',
        description:
          'A seamless integration between two great frameworks that offer high productivity, performance and versatility.',
        icon: 'tabler:brand-tailwind',
      },
      {
        title: 'Ready-to-use Components',
        description:
          'Widgets made with Tailwind CSS ready to be used in Marketing Websites, SaaS, Blogs, Personal Profiles, Small Business...',
        icon: 'tabler:components',
      },
      {
        title: 'Best Practices',
        description:
          'Creating secure, efficient, and user-friendly websites that deliver exceptional experiences and lasting value.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Excellent Page Speed',
        description:
          'Having a good page speed impacts organic search ranking, improves user experience (UI/UX) and increase conversion rates.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Search Engine Optimization (SEO)',
        description:
          "SEO lies in its ability to enhance a website's visibility, driving organic traffic and enabling it to reach a wider audience.",
        icon: 'tabler:arrows-right-left',
      },
      {
        title: 'Open to new ideas and contributions',
        description:
          'Embracing a culture that is open to new ideas and contributions is integral fostering innovation, collaboration, and a dynamic user experience.',
        icon: 'tabler:bulb',
      },
    ]}
    
  />

  <!-- Features Widget ***** -->

<Features
  id="features"
  title="Beneficios de trabajar con RLH"
  subtitle="Contamos con un equipo multidisciplinario y ofrecemos soluciones integrales que aseguran eficiencia, cumplimiento normativo y tranquilidad para tu empresa."
  columns={3}
  items={[
    {
      title: 'Experiencia Comprobada',
      description:
        'Más de 20 años acompañando a empresas de distintos tamaños, garantizando asesoría confiable y profesional.',
      icon: 'tabler:briefcase',
    },
    {
      title: 'Soluciones Integrales',
      description:
        'Ofrecemos servicios contables, tributarios, auditoría y asesoría legal en un solo lugar, facilitando la gestión de tu empresa.',
      icon: 'tabler:briefcase',
    },
    {
      title: 'Cumplimiento Normativo',
      description:
        'Aseguramos que tu empresa cumpla con todas las normativas contables y tributarias vigentes, minimizando riesgos.',
      icon: 'tabler:shield-check',
    },
    {
      title: 'Optimización de Procesos',
      description:
        'Analizamos y mejoramos los procesos contables y financieros, logrando eficiencia y reducción de errores.',
      icon: 'tabler:settings',
    },
    {
      title: 'Atención Personalizada',
      description:
        'Cada cliente recibe un servicio adaptado a sus necesidades específicas, con seguimiento cercano y constante.',
      icon: 'tabler:user-circle',
    },
    {
      title: 'Confianza y Transparencia',
      description:
        'Trabajamos con absoluta transparencia en la información contable y financiera, generando seguridad y confianza.',
      icon: 'tabler:briefcase',
    },
  ]}
/>



  

</Layout>
