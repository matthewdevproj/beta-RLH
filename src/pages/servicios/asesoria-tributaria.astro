---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Asesoría Tributaria - Consultoría Fiscal y Planeación | CRIS Consultoría',
  description: 'Optimización fiscal, cumplimiento tributario y planeación estratégica para minimizar cargas impositivas. Expertos en normativa DIAN.',
};

const tributaryServices = [
  {
    title: 'Declaraciones de Renta',
    description: 'Elaboración y presentación de declaraciones de renta para personas y empresas.',
    highlights: ['Declaración persona natural', 'Declaración persona jurídica', 'Acompañamiento DIAN'],
    image: 'https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Impuestos Locales',
    description: 'ICA, predial, industria y comercio y demás impuestos municipales.',
    highlights: ['ICA municipal', 'Impuesto predial', 'Industria y comercio'],
    image: 'https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Planeación Tributaria',
    description: 'Estrategias legales para optimizar la carga fiscal de su empresa.',
    highlights: ['Optimización fiscal', 'Beneficios tributarios', 'Estructuración legal'],
    image: 'https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Consultoría DIAN',
    description: 'Acompañamiento en procedimientos y requerimientos ante la DIAN.',
    highlights: ['Requerimientos DIAN', 'Procedimientos fiscales', 'Defensa administrativa'],
    image: 'https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  }
];

const benefits = [
  {
    title: 'Ahorro Fiscal',
    description: 'Optimizamos su carga tributaria dentro del marco legal.',
    icon: 'tabler:coin',
  },
  {
    title: 'Cumplimiento',
    description: 'Garantizamos el cumplimiento de todas sus obligaciones fiscales.',
    icon: 'tabler:checklist',
  },
  {
    title: 'Prevención Multas',
    description: 'Evitamos sanciones y multas por incumplimiento.',
    icon: 'tabler:shield-x',
  },
  {
    title: 'Actualización Permanente',
    description: 'Seguimiento continuo a reformas tributarias.',
    icon: 'tabler:refresh',
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero2
    tagline="Optimización Fiscal"
    title="Asesoría <span class='text-gray-800 dark:text-gray-200'>Tributaria Especializada</span>"
    subtitle="Maximice sus beneficios fiscales y cumpla con todas sus obligaciones tributarias. Planeación estratégica y acompañamiento experto ante la DIAN."
    actions={[
      {
        variant: 'primary',
        text: 'Optimizar Impuestos',
        href: '#servicios',
        icon: 'tabler:arrow-down',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80',
      alt: 'Asesoría tributaria y fiscal',
    }}
  />

  <!-- Servicios Section -->
  <CallToAction
    id="servicios"
    title="Servicios Tributarios Integrales"
    subtitle="Soluciones fiscales para el cumplimiento y optimización de su carga impositiva:"
    services={tributaryServices}
    actions={[
      {
        variant: 'secondary',
        text: 'Diagnóstico Gratuito',
        href: '#contacto',
        icon: 'tabler:calculator',
      },
      {
        variant: 'secondary',
        text: 'Urgencia DIAN',
        href: 'https://api.whatsapp.com/send/?phone=573001234567&text=Urgencia+con+la+DIAN&type=phone_number&app_absent=0',
        icon: 'tabler:alert-triangle',
      },
    ]}
  />

  <!-- Beneficios Section -->
  <Content
    isAfterContent
    isReversed
    items={benefits}
    image={{
      src: 'https://images.unsplash.com/photo-1554224154-2604c5a6d0d9?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80',
      alt: 'Análisis de documentos tributarios',
    }}
  >
    <Fragment slot="content">
      <div class="space-y-6">
        <h3 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-3xl">
          Maximice su Eficiencia Fiscal
        </h3>
        <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
          Nuestros especialistas en tributación desarrollan estrategias personalizadas que le 
          permiten cumplir con sus obligaciones fiscales mientras optimizan su carga impositiva. 
          Trabajamos dentro del marco legal para proteger su patrimonio.
        </p>
      </div>
    </Fragment>
  </Content>

  <!-- Final CTA Section -->
  <CallToAction
    id="contacto"
    title="¿Listo para Optimizar su Situación Fiscal?"
    subtitle="Obtenga un diagnóstico gratuito de su situación tributaria y descubra oportunidades de ahorro."
    actions={[
      {
        variant: 'secondary',
        text: 'Diagnóstico Gratis',
        href: 'https://api.whatsapp.com/send/?phone=573001234567&text=Quiero+un+diagnóstico+tributario+gratuito&type=phone_number&app_absent=0',
        icon: 'tabler:calculator',
      },
      {
        variant: 'secondary',
        text: 'Llamar Consultor',
        href: 'tel:+573001234567',
        icon: 'tabler:phone',
      },
      {
        variant: 'secondary',
        text: 'Descargar Guía Fiscal',
        href: '/guia-fiscal-2024',
        icon: 'tabler:download',
      },
    ]}
  />
</Layout>