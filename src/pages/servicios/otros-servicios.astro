---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Otros Servicios - Soluciones Empresariales Integrales | CRIS Consultoría',
  description: 'Servicios complementarios para el crecimiento y fortalecimiento de su organización: consultoría financiera, outsourcing, BI y reorganización.',
};

const otherServices = [
  {
    title: 'Consultoría Financiera',
    description: 'Análisis y recomendaciones para optimización financiera.',
    highlights: ['Análisis financiero', 'Reestructuración', 'Optimización recursos'],
    image: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Outsourcing Contable',
    description: 'Externalización completa del departamento contable.',
    highlights: ['Equipo especializado', 'Tecnología avanzada', 'Reportes periódicos'],
    image: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Business Intelligence',
    description: 'Sistemas de inteligencia de negocios para análisis de datos.',
    highlights: ['Dashboards interactivos', 'Análisis predictivo', 'Métricas KPI'],
    image: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  },
  {
    title: 'Consultoría Organizacional',
    description: 'Mejora de procesos y estructura organizacional.',
    highlights: ['Reingeniería procesos', 'Estructura organizacional', 'Manuales procedimientos'],
    image: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
  }
];

const benefits = [
  {
    title: 'Enfoque Integral',
    description: 'Soluciones que abordan todos los aspectos de su negocio.',
    icon: 'tabler:package',
  },
  {
    title: 'Tecnología Avanzada',
    description: 'Herramientas digitales para optimizar sus procesos.',
    icon: 'tabler:device-desktop',
  },
  {
    title: 'Expertos Multidisciplina',
    description: 'Equipo con diversas especialidades empresariales.',
    icon: 'tabler:users',
  },
  {
    title: 'Resultados Medibles',
    description: 'Enfoque en métricas y retorno de inversión.',
    icon: 'tabler:chart-line',
  },
];
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero2
    tagline="Soluciones Integrales"
    title="Otros <span class='text-gray-800 dark:text-gray-200'>Servicios Especializados</span>"
    subtitle="Servicios complementarios que fortalecen su organización: consultoría financiera, outsourcing, business intelligence y reorganización empresarial para el crecimiento sostenible."
    actions={[
      {
        variant: 'primary',
        text: 'Explorar Servicios',
        href: '#servicios',
        icon: 'tabler:arrow-down',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80',
      alt: 'Servicios empresariales integrales',
    }}
  />

  <!-- Servicios Section -->
  <CallToAction
    id="servicios"
    title="Servicios Complementarios"
    subtitle="Soluciones adicionales diseñadas para el crecimiento y fortalecimiento empresarial:"
    services={otherServices}
    actions={[
      {
        variant: 'secondary',
        text: 'Consultoría Inicial',
        href: '#contacto',
        icon: 'tabler:briefcase',
      },
      {
        variant: 'secondary',
        text: 'Portafolio Completo',
        href: '/servicios',
        icon: 'tabler:list',
      },
    ]}
  />

  <!-- Beneficios Section -->
  <Content
    isAfterContent
    items={benefits}
    image={{
      src: 'https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80',
      alt: 'Reunión de consultoría empresarial',
    }}
  >
    <Fragment slot="content">
      <div class="space-y-6">
        <h3 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-3xl">
          Soluciones que Transforman Negocios
        </h3>
        <p class="text-lg text-gray-700 dark:text-gray-300 leading-relaxed">
          Complementamos nuestros servicios core con soluciones especializadas que abordan 
          necesidades específicas de su organización. Desde transformación digital hasta 
          reestructuración organizacional, tenemos las herramientas para su éxito.
        </p>
      </div>
    </Fragment>
  </Content>

  <!-- Final CTA Section -->
  <CallToAction
    id="contacto"
    title="¿Listo para Potenciar su Empresa?"
    subtitle="Descubra cómo nuestros servicios complementarios pueden impulsar su crecimiento."
    actions={[
      {
        variant: 'secondary',
        text: 'Consultoría Inicial',
        href: 'https://api.whatsapp.com/send/?phone=573001234567&text=Quiero+consultoría+inicial+para+servicios+complementarios&type=phone_number&app_absent=0',
        icon: 'tabler:briefcase',
      },
      {
        variant: 'secondary',
        text: 'Llamar Consultor',
        href: 'tel:+573001234567',
        icon: 'tabler:phone',
      },
      {
        variant: 'secondary',
        text: 'Portafolio Completo',
        href: '/portafolio-servicios',
        icon: 'tabler:file-broken',
      },
    ]}
  />
</Layout>